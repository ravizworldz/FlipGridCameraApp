<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/imagePickerCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/grey">

        <ImageView  android:id="@+id/imageView"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <TextView android:id="@+id/selectAvatarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_tap_to_add_avatar"
            android:textStyle="bold"
            android:textSize="@dimen/large_18sp"
            android:textColor="@color/gray_mid"
            android:gravity="center"
            android:layout_margin="50dp"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>